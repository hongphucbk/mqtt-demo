<% layout('../layout/index') %>

<div class="panel-heading">
	Station Add new station
	<span style="float: right;"><a href="/cabinet">Home</a></span>
</div>
<div class="panel-body">

<% if(typeof errors != "undefined"){%>
<% errors.forEach(function(err){ %>
  <div class="alert alert-danger">
      <%= err %> 
  </div>
<% }) %>
<% } %>


<form method="post" action="/cabinet/add">
  <div class="form-row">
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Station</label>
      <select class="form-control" name="station_id">
        <% stations.forEach(function(station){ %>
          <option value="<%= station.id %>"><%= station.description %></option>
            
        <% }) %>
        
      </select>
    </div>

    <div class="col-md-4 mb-3 col-sm-6">
      <label>Name</label>
      <input type="text" class="form-control" name="name" placeholder="Name..."
        value="">
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Description</label>
      <input type="text" class="form-control" name="description" placeholder="Description..."
        value="" required>
    </div>
    <div class="col-md-4 mb-3">
      <label>Address</label>
      <input type="text" class="form-control" name="address" placeholder="Address..."
        value="">
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Information</label>
      <input type="text" class="form-control" name="information" placeholder="Information..."
        value="" />
    </div>
    <div class="col-md-2 mb-3 col-sm-6">
      <label>Note</label>
      <input type="text" class="form-control" name="note" placeholder="Note..."
        value="" >
    </div>
    <div class="col-md-2 mb-3 col-sm-6">
      <label>Position X</label>
      <input type="text" class="form-control" name="posx" placeholder="Position x..."
        value="" >
    </div>
    <div class="col-md-2 mb-3 col-sm-6">
      <label>Position Y</label>
      <input type="text" class="form-control" name="posy" placeholder="Position y..."
        value="" >
    </div>
    <div class="col-md-2 mb-3 col-sm-6">
      <label>Div id</label>
      <input type="text" class="form-control" name="div_id" placeholder="Div id..."
        value="" >
    </div>
    
   </div>
    
  <div class="form-row">
  	<div class="col-md-12 mb-3 col-sm-6">
  	<br>
      <button class="btn btn-success" type="submit">Submit </button>
    </div>
  </div>
 
</form>
</div>

