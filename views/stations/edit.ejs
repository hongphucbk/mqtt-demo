<% layout('../layout/index') %>

<div class="panel-heading">
	Station Edit station: <%= station.description %>
	<span style="float: right;"><a href="/station">Home</a></span>
</div>
<div class="panel-body">
<form method="post" action="/station/edit/<%= station.id %>">
  <div class="form-row">
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Name</label>
      <input type="text" class="form-control" name="name" placeholder="Name..."
        value="<%= station.name %>">
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Description</label>
      <input type="text" class="form-control" name="description" placeholder="Description..."
        value="<%= station.description %>" required>
    </div>
    <div class="col-md-4 mb-3">
      <label>Address</label>
      <input type="text" class="form-control" name="address" placeholder="Address..."
        value="<%= station.address %>">
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Information</label>
      <input type="text" class="form-control" name="information" placeholder="Information..."
        value="<%= station.information %>" required>
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Note</label>
      <input type="text" class="form-control" name="note" placeholder="Note..."
        value="<%= station.note %>" required>
    </div>
   </div>
    
  <div class="form-row">
    <div class="col-md-12 mb-3 col-sm-6">
    <br>
      <button class="btn btn-success" type="submit">Edit </button>
    </div>
  </div>
 
</form>
</div>

