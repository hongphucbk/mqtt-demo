            <td><%= moment(water.timestamp).format('DD-MMM-YYYY HH:mm:ss') %></td>
                <td>Bá»“n <%= water.name %></td>
            <td><%= water.data.toFixed(2) %></td>
            <td><%= water.name %></td>
          </tr>
          <% }) %>
        </tbody>
        <!-- <tfoot>
            <tr>
